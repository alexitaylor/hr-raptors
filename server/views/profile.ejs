<% include head.ejs%>

    <div class="page-header text-center" style="margin-left:25px">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/" style="background-color:black" class="btn btn-default btn-sm">Home page</a>
        <a href="/logout" style="background-color:black" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row" style="margin-left:25px">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-check"></span> Login Successful</h3>

                <% if (user.email) { %>
                <p>
                    <strong>display name</strong>: <%= user.display %><br>
                    <strong>id</strong>: <%= user.id %><br>
                    <strong>email</strong>: <%= user.email %>
                </p>

                <a href="/unlink/local" style="background-color:black" class="btn btn-default">Unlink</a>
                <% } else { %>
                <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>
            </div>
        </div>

